<?php

class SSLDom extends ArrayObject
{
    public function addChunks(array $chunks)
    {
        foreach($chunks as $chunk)
        {
            $this->append($chunk);
        }
    }
    
    public function __toString()
    {
        $string = '';
        foreach($this as $chunk)
        {
            $string .= $chunk->toString();
            $string .= "\n";
        }
        return $string;
    }
}